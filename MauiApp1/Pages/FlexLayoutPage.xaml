<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout Direction="Row" JustifyContent="Center" AlignItems="Center">     
        <StackLayout>
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Red"></Rectangle>
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Green"></Rectangle>
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Blue"></Rectangle>
        </StackLayout>
    </FlexLayout>
</ContentPage>